{
  "name": "mengleUtils",
  "version": "1.0.0",
  "description": "zhangzimeng's javascript utils",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "tsc": "tsc --noEmit",
    "postinstall": "./node_modules/typescript/bin/tsc",
    "run:ts": "env TS_NODE_FILES=true ./node_modules/ts-node/dist/bin.js --project ./tsconfig.json"
  },
  "jest": {
    "transform": {
      ".(js|jsx)": "babel-jest",
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*[\\w+]\\.spec\\.ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules"
    ]
  },
  "author": "zhangzimeng",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.2",
    "babel-jest": "^23.4.2",
    "chai": "^4.1.2",
    "jest": "^23.5.0",
    "mocha": "^5.2.0",
    "ts-jest": "^23.1.3",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "util.promisify": "^1.0.0"
  }
}
